@model List<User>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">List of Sheets</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="User" asp-action="Upsert" class="btn btn-primary btn-white">
					<i class="bi bi-plus-circle"></i>  Create New Sheet
				</a>
			</div>
		</div>

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Name
					</th>
					<th>
						User
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var obj in Model)
				{
					<tr>
						<td>@obj.Name</td>
						<td>@obj.Id</td>
						<td>
							<div style="text-align: right;">
								<div class="w-75 btn" style="text-align: right;">
									<a asp-controller="User" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary">
										<i class="bi bi-pencil-square"></i>
									</a>
									<a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger">
										<i class="bi bi-trash3"></i>
									</a>
								</div>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>